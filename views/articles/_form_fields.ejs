<div class="mb-3">
	<label for="title">Title</label>
	<input value="<%= article.title %>" required class="form-control" type="text" name="title" id="title">
</div>
<div class="mb-3">
	<label for="description">Description</label>
	<textarea class="form-control" type="text" name="description" id="description"><%= article.description %></textarea>
</div>
<div class="mb-3">
	<label for="markdown">Markdown</label>
	<textarea required class="form-control" type="text" name="markdown" id="markdown"><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>